<form class="{{cssClass}}" autocomplete="off">

    {{!-- Sheet Header --}}
    <div class="sheet-flex-container">
        <div class="sheet-sidebar">
            <div class="header-container">
                {{> "systems/witchcraft/templates/components/portrait.hbs"}}
                <div class="header-info-container">
                    <div class="info-container">
                        <h2>
                            <input class="charname" type="text" name="name" value="{{actor.name}}" placeholder="Name">
                        </h2>
                        {{> "systems/witchcraft/templates/components/primary-attributes.hbs"}}
                        {{> "systems/witchcraft/templates/components/secondary-attributes.hbs"}}
                    </div>
                </div>
            </div>
        </div>
        <section class="sheet-body">
        	<div class="sheet-body-header">
				<div class="character-type-selector">
					<select id="characterTypeSelect" name="system.characterType" data-type="String">
						{{#selectOptions actor.system.characterTypes selected=actor.system.characterType}}
						{{/selectOptions}}
					</select>
				</div>
				<div class="sheet-nav-container">
					<nav class="sheet-nav sheet-tabs tabs" data-group="primary">
						<a class="item" data-tab="core">Core</a>
						<a class="item" data-tab="equipment">Equipment</a>
					</nav>
				</div>
				<div class="xp-container">
					<div class="xp-flex-container">
						<h2>XP</h2>
						<input type="number" name="system.xp" value="{{actor.system.xp}}">
					</div>
				</div>
			</div>
        	

            {{!-- Core Tab --}}
            <div class="tab core" data-group="primary" data-tab="core">

                <div class="core-item-container">
                    {{> "systems/witchcraft/templates/components/qualities.hbs"}}
                    {{> "systems/witchcraft/templates/components/drawbacks.hbs"}}
                </div>
                <div class="core-item-container">
                    {{> "systems/witchcraft/templates/components/skills.hbs"}}
                    {{> "systems/witchcraft/templates/components/powers.hbs"}}
                </div>
                
                {{> "systems/witchcraft/templates/components/character-details.hbs"}}
                {{> "systems/witchcraft/templates/components/biography.hbs"}}

            </div>

            {{!-- Equipment Tab --}}
            <div class="tab equipment" data-group="primary" data-tab="equipment">
                {{> "systems/witchcraft/templates/components/equipment-header.hbs"}}

                {{> "systems/witchcraft/templates/components/weapons.hbs"}}

                {{> "systems/witchcraft/templates/components/items.hbs"}}
                
				{{> "systems/witchcraft/templates/components/notes.hbs"}}
            </div>

        </section>
    </div>
</form>