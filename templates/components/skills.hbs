<div class="skills-container">
    <h2 id="skill-header" class="header-with-button">
        <button type="button" class="create-item" data-create="skill">+</button>
        <span>Skills</span>
        <button type="button" class="create-item" data-create="specialty">Sp</button>
    </h2>
    <table class="item-table">
        <thead>
            <tr>
                <th class="table-left-align">Name</th>
                <th>Level</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {{#each actor.skill as |item id|}}
            <tr class="item" data-item-id="{{item._id}}">
                <td class="item-name">{{#if item.system.label}}{{item.system.label}}{{else}}{{item.name}}{{/if}}</td>
                <td class="table-center-align">{{item.system.level}}</td>
                <td class="table-center-align"><a class="item-control item-delete" title="Delete Item"><i
                            class="fas fa-trash"></i></a></td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>